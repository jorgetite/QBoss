{% extends 'partials/fragment.html.twig' %}

{% block container %}
    <div class="container-row row{% if colw == 'auto' %} auto{% endif %}">
        <div class="col{% if colw and colw != 'auto' %} {{colw}}{% endif %}{% if center %} push-center{% endif %}{% if middle %} push-middle{% endif %}">
            {% block heading %}
                {% if page.header.show_heading %}
                    <div class="heading">
                        <h2>{{page.header.title}}</h2>
                        {%if page.header.subtitle %}
                            <h3>{{page.header.subtitle}}</h3>
                        {% endif %}
                    </div>
                {% endif %}
            {% endblock %}
            {% block content %}
                <div class="content">
                    {{ page.content }}
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}