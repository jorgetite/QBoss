{% extends 'partials/fragments/default.html.twig' %}

{% block content %}
    {% if modular_image %}
        <div class="content row gutters">
            <div class="col col-6 text-center {% if page.header.image_position == 'left' %}first{% else %}last{% endif %}">
                <img src="{{ modular_image.url }}" />
            </div>
            <div class="col col-6">
                {{ page.content }}
            </div>
        </div>
    {% else %}
        <div class="content">
            {{ page.content }}
        </div>
    {% endif %}
{% endblock %}