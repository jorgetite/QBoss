<section id="{{id}}" class="{{section}} {{padding}}">
    <div class="container">
        {% block container %}
            {% block heading %}
                {% if page.header.show_heading %}
                    <div class="row auto">
                        <div class="col">
                            <div class="heading">
                                <h2>{{page.header.title}}</h2>
                                {%if page.header.subtitle %}
                                    <h3>{{page.header.subtitle}}</h3>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endblock %}
            {% block content %}
                <div class="row auto">
                    <div class="col">
                        {{ page.content }}
                    </div>
                </div>
            {% endblock %}
        {% endblock %}
    </div>
</section>
