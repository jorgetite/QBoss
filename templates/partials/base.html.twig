{% set compress = theme_var('production_mode') ? '.min' : '' %}

<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('theme://css/kube' ~ compress ~ '.css', 100) %}
        {% do assets.addCss('theme://css/fonts' ~ compress ~ '.css', 99) %}
        {% do assets.addCss('https://use.fontawesome.com/releases/v5.0.13/css/all.css', 98) %}
        {% do assets.addCss('theme://css-compiled/theme' ~ compress ~ '.css', 01) %}
        {% do assets.addCss('theme://css/custom.css', 00) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.addJs('theme://js/kube' ~ compress ~ '.js', 99)%}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>
<body class="{{ page.header.body_classes }}">
    {% block header %}
    <nav id="navbar">
        <div class="flex">
            <a class="site-brand" href="{{ home_url }}">
                <img class="site-logo" src="{{ url('theme://images/logo.png') }}" />
                <h1 class="site-name">{{ config.site.title }}</h1>
            </a>
            <nav class="site-nav">
                {% block header_navigation %}
                    {% include 'partials/navigation.html.twig' %}
                {% endblock %}
            </nav>
        </div>
    </nav>
    {% endblock %}

    <section id="main">
        {% block hero %}{% endblock %}
        {% block body %}
            <section id="content">
                {% block content %}{% endblock %}
            </section>
        {% endblock %}
    </section>

    {% block footer %}
    <footer>
        <div class="flex">
            <p class="copyright">
                {% block copy %}
                Copyright Â© 2018 - Jorge Tite - All rights reserved
                {% endblock %}
            </p>
            <nav class="site-nav">
            {% block footer_navigation %}
                {% include 'partials/navigation.html.twig' %}
            {% endblock %}
            </nav>
        </div>
        <p class="qboss smaller">
            <a href="https://github.com/jorgetite/grav-theme-qboss">QBoss Theme</a> was <i class="fa fa-code"></i> with <i class="fa fa-heart"></i> by <a href="http://www.jorgetite.com">Jorge Tite</a>
        </p>
    </footer>
    {% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}
</body>
</html>
