{% set compress = theme_var('production_mode') ? '.min' : '' %}

<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('theme://css/kube' ~ compress ~ '.css', 100) %}
        {% do assets.addCss('theme://css/fonts' ~ compress ~ '.css', 99) %}
        {% do assets.addCss('https://use.fontawesome.com/releases/v5.0.13/css/all.css', 98) %}
        {% do assets.addCss('theme://css-compiled/theme' ~ compress ~ '.css', 01) %}
        {% do assets.addCss('theme://css/custom.css', 00) %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('jquery', 100) %}
        {% do assets.addJs('theme://js/kube' ~ compress ~ '.js', 99)%}
    {% endblock %}
    {{ assets.js() }}

{% endblock head%}
</head>
<body class="{{ page.header.body_classes }}">
    {% block header %}
    <section id="header">
        <div class="show-sm">
            <div id="nav-toggle-wrap">
                <a class="site-brand" href="{{ home_url }}">
                    <h1 class="site-name">{{ config.site.title }}</h1>
                </a>
                <a href="#" id="nav-toggle" data-component="toggleme" data-target="#navbar"><i class="kube-menu"></i></a>
            </div>
        </div>

        <nav id="navbar" class="hide-sm">
            <a class="site-brand" href="{{ home_url }}">
                <img class="site-logo" src="{{ url('theme://images/logo.png') }}" />
                <h1 class="site-name">{{ config.site.title }}</h1>
            </a>
            <nav class="site-nav">
                {% block header_navigation %}
                    {% include 'partials/navigation.html.twig' %}
                {% endblock %}
            </nav>
        </nav>
    </section>
    {% endblock %}

    {% block messages %}
        {% include 'partials/messages.html.twig' ignore missing %}
    {% endblock %}

    <section id="messages">
        <div class="message error" data-component="message">
            You have 2 modules waiting to installation. Install
            <span class="close small"></span>
        </div>
        <div class="message warning" data-component="message">
            You have 2 modules waiting to installation. Install
            <span class="close small"></span>
        </div>
        <div class="message success" data-component="message">
            You have 2 modules waiting to installation. Install
            <span class="close small"></span>
        </div>
        <div class="message focus" data-component="message">
            You have 2 modules waiting to installation. Install
            <span class="close small"></span>
        </div>
        <div class="message inverted" data-component="message">
            You have 2 modules waiting to installation. Install
            <span class="close small"></span>
        </div>
    </section>

    <section id="main">
        <section id="sub-nav">
        </section>
        {% block hero %}{% endblock %}
        {% block body %}
            <section id="content">
                {% block content %}{% endblock %}
            </section>
        {% endblock %}
    </section>

    {% block footer %}
    <footer>
        <section class="copyright">
            {% block copy %}
                <p/>Copyright Â© 2018 - QBoss Theme - All rights reserved - QBoss Theme is released under the <a href="https://github.com/jorgetite/grav-theme-qboss/blob/master/LICENSE">MIT license</a></p>
            {% endblock %}
            <p><a href="https://github.com/jorgetite/grav-theme-qboss">QBoss Theme</a> was <i class="fas fa-code"></i> with <i class="fas fa-heart"></i> by <a href="http://www.jorgetite.com">Jorge Tite</a></p>
        </section>
    </footer>
    {% endblock %}

{% block bottom %}
    {{ assets.js('bottom') }}
{% endblock %}
</body>
</html>
