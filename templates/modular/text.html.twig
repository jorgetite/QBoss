{% set image = page.media.images|first %}
{% set bgimg = image and page.header.image_position == 'back' %}

<section id="{{page.header.modular_id}}" class="text-section {{page.header.modular_padding}}" {% if bgimg %}style="background-image: url({{ image.url }});"{% endif %}>
    <div class="container">
        <div class="row {% if image and not bgimg %}gutters{% endif %}">
            {% if image and page.header.image_position != 'back' %}
                <div class="col col-6 text-center {% if page.header.image_position == 'left' %}first{% else %}last{% endif %}">
                    <img src="{{ image.url }}" />
                </div>
                <div class="col col-6">
                    {{ content }}
                </div>
            {% else %}
                <div class="col col-12">
                    {{ content }}
                </div>
            {% endif %}
        </div>
    </div>
</section>